<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th style="width:30px">#</th>
            <th>Nadawca</th>
            <th>Odbiorca</th>
            <th style="width:60px"></th>
        </tr>
    </thead>
    <tbody>
    {% for d in deliveries %}
    <tr>
        <td>{{ d.id }}</td>
        <td>{{ d.sender.fullName }}</td>
        <td>{{ d.receiver.fullName }}</td>
        <td><a class="btn btn-info" href="{{ path('crr_delivery_admin_show', { deliveryId: d.id }) }}">Sczegóły</a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
